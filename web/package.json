  "scripts": {
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "if [ -z \"$VERCEL\" ]; then husky install; else echo 'Skipping husky install in Vercel'; fi",
    "vercel-build": "npm install --legacy-peer-deps --no-optional && NODE_OPTIONS='--max-old-space-size=4096' next build",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:setup": "supabase db reset && npm run db:seed",
    "generate:types": "supabase gen types typescript --project-id $NEXT_PUBLIC_SUPABASE_PROJECT_ID > lib/supabase/database.types.ts",
